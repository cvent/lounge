{
  "name": "lounge",
  "description": "Simple Mongoose-inspired ODM for Couchbase",
  "version": "0.8.1",
  "homepage": "https://github.com/bojand/lounge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/bojand/lounge.git"
  },
  "bugs": {
    "url": "http://github.com/bojand/lounge/issues"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "index.js",
  "author": {
    "name": "Bojan Djurkovic <dbojan@gmail.com>"
  },
  "scripts": {
    "test": "LOUNGE_COUCHBASE_MOCK=true mocha test/*.spec.js && LOUNGE_COUCHBASE_MOCK=true ava -v -s",
    "test-ava": "LOUNGE_COUCHBASE_MOCK=true ava -v -s",
    "cover": "LOUNGE_COUCHBASE_MOCK=true nyc mocha",
    "docs:api": "jsdoc --package package.json -c jsdoc.json -R docs/readme.md",
    "docs:clean": "rm -rf ./api-docs",
    "docs:move": "./mvapidocs.sh",
    "docs": "npm run docs:api && docs:move && docs:clean",
    "mddocs": "jsdoc2md lib/*.js > docs/api2.md"
  },
  "dependencies": {
    "async": "^2.0.1",
    "clone": "^2.0.0",
    "couchbase": "^2.1.3",
    "couchbase-driver": "~0.1.12",
    "debug": "^2.2.0",
    "grappling-hook": "git://github.com/bojand/grappling-hook.git#76d186e",
    "inflection": "^1.8.0",
    "lodash": "~4.17.0",
    "memoizee": "~0.4.0",
    "mpath": "^0.2.1",
    "traverse": "^0.6.6",
    "uuid": "^3.0.0",
    "with-callback": "^1.0.2"
  },
  "devDependencies": {
    "ava": "^0.18.0",
    "chai": "^3.4.1",
    "docdash": "^0.4.0",
    "jsdoc": "^3.4.0",
    "jsdoc-to-markdown": "^3.0.0",
    "lodash3": "~3.10.0",
    "mocha": "^3.0.2",
    "nyc": "^8.4.0",
    "shelljs": "^0.7.3",
    "standard": "^9.0.2",
    "validator": "^7.0.0"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ]
  },
  "directories": {
    "test": "test"
  },
  "standard": {
    "globals": [
      "describe",
      "expect",
      "it"
    ]
  },
  "keywords": [
    "couchbase",
    "document",
    "model",
    "schema",
    "database",
    "odm",
    "data",
    "datastore",
    "query",
    "nosql",
    "orm",
    "db"
  ],
  "config": {
    "nyc": {
      "include": [
        "lib/*.js"
      ]
    }
  }
}
